{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,    
    "paths": {      
      "@interfaces/*": ["./src/app/interfaces/*"],
      "@forms/*": ["./src/app/components/forms/*"],
      "@lists/*": ["./src/app/components/lists/*"],
      "@modal/*": ["./src/app/pages/modals/*"],
      "@data/*": ["./src/app/services/*"],
      "@pipes/*": ["./src/app/pipes/*"]    
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}